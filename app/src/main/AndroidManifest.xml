<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fukaimei.e_commerce">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DepartmentStoreActivity"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SwipeRecyclerActivity" />
        <!--<activity android:name=".DepartmentStoreActivity" android:theme="@style/AppCompatTheme" />-->
        <activity
            android:name=".DepartmentHomeActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".DepartmentClassActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".DepartmentCartActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".SearchViewActivity"
            android:theme="@style/AppCompatTheme" />

        <activity
            android:name=".SearchResultActvity"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>